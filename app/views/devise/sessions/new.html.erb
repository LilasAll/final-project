<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="section section-signup page-header" style=" margin:px; background-image: url('./assets/img/city.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
          <div class="card card-login">
            <form class="form" method="" action="">
              <div class="card-header card-header-primary text-center">
                <h4 class="card-title">Connexion</h4>
                <!-- <div class="social-line">
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-facebook-square"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-twitter"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-google-plus"></i>
                  </a>
                </div> -->
              </div>
              <p class="description text-center">Bon retour parmis nous</p>
              <div class="card-body" ">
                <div class="input-group" style="padding: 0;">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                    </span>
                  </div>
                  <div  class="">
                    <div class="field">
                      <%= f.label 'Email' %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", style:'width :15em;' , class: "form-control" %>
                    </div>
                    <div class="field">
                      <%= f.label 'Mot de Passe' %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password",class: "form-control",style:'width :15em;' %>
                    </div>
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label 'Se souvenir de moi' %>
                      </div>
                    <% end %>
                    <div class="footer text-center">
                      <a href="#pablo" class="btn btn-primary btn-link btn-wd btn-lg"><%= f.submit "Me connecter", class:'btn btn-primary' %>
                      </a>
                    </div>
                    <center>
                      <%= link_to("Mot de passe oubliÃ©", new_user_password_path, id:"forget-password", class:"forget-password") %>
                    </center>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
