<h2>Mot de passe oublié ? </h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <div class="section section-signup page-header" style=" margin:px; background-image: url('./assets/img/city.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
          <div class="card card-login">
            <form class="form" method="" action="">
              <div class="card-header card-header-primary text-center">
                <h4 class="card-title">Mot de passe oublié</h4>
                <div class="social-line">
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-facebook-square"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-twitter"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link">
                    <i class="fa fa-google-plus"></i>
                  </a>
                </div>
              </div>
              <p class="description text-center">Entrer votre email pour reinitialiser votre mot de passe.</p>
              <div class="card-body">
                <div class="input-group" style="padding: 0;">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                    </span>
                  </div>
                  <div  class="">
									  <div class="field">
									    <%= f.label :email %><br />
									    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
									  </div>

									  <div class="actions">
									    <%= f.submit "Envoyer les instructions de réinitialisation" %>
									  </div>
									<% end %>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


<%= render "devise/shared/links" %>

</div>
