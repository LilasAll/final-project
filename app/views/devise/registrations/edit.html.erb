<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8 ml-auto mr-auto">
      <div class="card ">
          <div class="card-header card-header-info text-center">
            <h4 class="card-title">Metter à jour mon profil</h4>
          </div>
          <div><center>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <h3>Changer mes informations</h3>
              <div class="field">
                <%= f.label 'Email' %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label 'Nom' %><br />
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label 'Prénom' %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label 'Ville' %><br />
                <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label 'Ma description' %><br />
                <%= f.text_field :description, autofocus: true, autocomplete: "description", class: "form-control" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label'Mot de passe'%> <i>(Ne remplis pas cette case si tu ne veux pas le changer)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label 'Confirmation du mot de passe' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label 'Mot de passe actuel' %> <i>(Merci de rentrer votre mot de passe pour sauvegarder les changements)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Mettre à jour", class: "btn btn-info" %>
              </div>
            <% end %>
            
            <h3>Ma photo de profil</h3>
            <%= form_tag user_avatars_path(@user), multipart: true do %>
              <%= file_field_tag :avatar %>
              <%= submit_tag "Mettre à jour", class: "btn btn-info" %>
            <% end %>

            <h3>Supprimer mon compte</h3>

            <p>Vous êtes insatisfait? <%= button_to "Suprrimer mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sur? :( " }, method: :delete, class: "btn btn-danger btn-sm"  %></p>

            <%= link_to "Retour", :back %>
          </div>
          </center>
        </div>
      </div>
    </div>
  </div>
</div>


