<center>
  <%= link_to  users_path do %>
    <button style="margin-top: 100px;" class="btn-see-all-users btn btn-primary"   > Voir tous les utilisateurs </button>
  <%end%>
  <form style="width: 50em; margin: 100px; " class=' ' action="/search_user">
    <input placeholder='Chercher un utilisateur...' name="q" class="form-control mr-sm-2" type="text" aria-label="search_user">
    <button class="btn btn-primary", style='color:white'  type="submit" >Chercher</button>
  </form>
  <div style="margin-top: 100px;" class="main main-raised">
    <div class="section section-basic">
      <div class=" container">
        <div id="mail" class="">
          <h1 class="panel-heading">Conversations</h1>
          <div class="panel-body">
            <div class="item">
              <% @conversations.each do |conversation| %>
                <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                  <% if conversation.sender_id == current_user.id %>
                    <% recipient = User.find(conversation.recipient_id) %>
                  <% else %>
                    <% recipient = User.find(conversation.sender_id) %>
                  <% end %>
                  <h3><%= link_to recipient.pseudo, conversation_messages_path(conversation)%>
                    <% if recipient.messages.unread_by(current_user).count === 0 %>
                    <%else%>
                      <span class="badge badge-warning m-0">New</span>
                    <%end%>
                  </h3>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="col-lg-6">
          </div>
        </div>
      </center>
