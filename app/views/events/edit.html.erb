<div class="container">
  <div class="row">
    <div class="card card-nav-tabs text-center">
      <div class="card-header card-header-primary">
        <h3 class="title">Modification de mon évènement </h3>
      </div>
      <div><center>
          <br>
          <%= form_tag url_for(action: 'update'), method: "patch",multipart: true do %>
            <%= label_tag "Nom de l'évènement" %><br/>
            <%= text_field_tag 'title', @event.title %>
            <br />
            <br />
            <%= label_tag 'Description' %><br/>
            <%= text_area_tag 'description', @event.description %>
            <br />
            <br />
            <%= label_tag "Date de l'évènement" %><br />
            <%= date_field_tag 'start_date', @event.start_date.strftime("%Y-%m-%d") %>
            <br />
            <br />
            <%= label_tag 'Durée (en minutes)' %><br />
            <%= text_field_tag :duration , @event.duration%>
            <br />
            <br />
            <%= label_tag 'Lieu' %><br/>
            <%= text_field_tag :location, @event.location %>
            <br />
            <br />
            <%= label_tag "Falcutatif : prix " %><br />
            <p> (en cas d'achat de matériel, location de salle, etc)</p>
            <%= text_field_tag :price, @event.price %>
            <br />
            <br />
            <%= file_field_tag :image_event %>
            <br>
            <%= submit_tag 'Update Post' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</center></div>
</div>
</div>
</div>
</div>
</div>
