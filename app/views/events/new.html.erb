<% if @event.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
    <p><strong>Nous n'avons pas pu créer d'évenement pour la ou les raison(s) suivante(s) :</strong></p>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-6 ml-auto mr-auto">
      <%= form_tag url_for(action: 'create'), class: "form", method: "post",multipart: true do %>
        <%= label_tag "Nom de l'évènement" %><br />
        <%= text_field_tag 'title' %>
        <br />
         <br />
        <%= label_tag 'Description' %><br />
        <%= text_area_tag :description  %>
        <br />
         <br />
        <%= label_tag 'Date of the event' %><br />
        <%= date_field_tag 'start_date'%>
        <br />
         <br />
        <%= label_tag 'Durée (en minutes)' %><br />
        <%= text_field_tag :duration %>
        <br />
        <br />
        <%= label_tag 'Lieu' %><br/>
        <%= text_field_tag :location %>
        <br />
         <br />
        <%= label_tag "Falcutatif : prix " %><br />
        <p> (en cas d'achat de matériel, location de salle, etc</p>
        <%= text_field_tag :price %>
        <br />
         <br />
         <P>TAGS</P>

      <div class="input-group m-3 ">
      <label> Selectionner un ou plusieurs tags : </label>
              <%= select_tag "tag_id", options_from_collection_for_select(Tag.order(:name), "id", "name"), multiple: true, class: 'ml-5' %>

      </div>



        <P>IMAGES</P>
        <%= file_field_tag :image_event %>
        <br>
          <button type="submit" class= "btn btn-primary"> Ajouter mon Gossip </button>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
