
<div class="article-card mx-auto">
  <div class="card card-nav-tabs article-show">
    <div class="card-header card-header-primary">
      <%= @article.title %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @article.content.html_safe %></p>
      <% @article.join_tag_articles.each do |join| %>
         <%= link_to tag_path(join.tag.id), class: "" do %> 
          <span class="badge badge-primary"> <%= join.tag.name %></span>
        <% end %>
      <% end %>
    </div>
    <div class = "">
      <div class="card-text d-flex justify-content-end">Ecrit le : <%= @article.created_at.strftime("%d/%m/%Y") %></div>
      <div class="card-text d-flex justify-content-end"><%= link_to "Par : #{@article.author.pseudo}", user_path(@article.author) %></div>
    </div>
    <p><%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%></p>
    <% pre_like = @article.likes.find { |like| like.user_id == current_user.id} %>
    <% if pre_like %>
    <%= form_for :like, url: article_like_path(@article, pre_like), method: :delete do |f| %>
        <button class="btn br3 bg-orange9 ph4 pv3 lh0 bt bl bw2 b--black-20 white tc"> <i class="material-icons">favorite</i> Je n'aime plus</i> </button>
          <%end%>
    <% else %>
      <%= form_for :like, url: article_likes_path(@article) do |f| %>
        <button class="btn br3 bg-orange9 ph4 pv3 lh0 bt bl bw2 b--black-20 white tc"> <i class="material-icons">favorite</i>J'aime</i> </button>
    <%end%>

  <% end %>
</div>
</div>
        <%= link_to articles_path, style: "margin: 20px" do %>
          <button type="button" class="btn btn-warning btn-circle btn-xl" title="Voir tous les articles">
            <i class="fa fa-newspaper-o" aria-hidden="true"></i>
          </button>
        <%end%>
</div>

